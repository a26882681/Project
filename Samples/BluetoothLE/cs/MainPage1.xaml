<Page
    x:Class="SDKTemplate.MainPage1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SDKTemplate"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:charts="using:CrossPieCharts.UWP.PieCharts"
    mc:Ignorable="d" Loaded="Page_Loaded" Unloaded="Page_Unloaded">
    <Page.Resources>
        <DataTemplate x:Key="AttributeTemplate" x:DataType="local:BluetoothLEAttributeDisplay">
            <Grid Margin="5">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" MinWidth="100"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="1" Margin="5">
                    <StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{x:Bind Name}" Style="{StaticResource ListItemTextStyle}" FontWeight="Bold" TextWrapping="WrapWholeWords"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{x:Bind AttributeDisplayType}" Margin="10,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </DataTemplate>
    </Page.Resources>
    <ScrollViewer Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="12,10,12,12">
        <StackPanel>
           
            <StackPanel Orientation="Horizontal" Margin="0,0" >
                <TextBlock x:Name="WatchState" Text="手錶：未連線" Margin="0,5,0,5"/>
                <Ellipse x:Name="WatchState_LED" HorizontalAlignment="Center" Height="15" Margin="5,0,0,0" VerticalAlignment="Center" Width="15" RequestedTheme="Light"  Fill="DarkRed" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0" >
                <TextBlock x:Name="ArduinoState" Text="Arduino藍芽：未連線" Margin="0,5,0,5"/>
                <Ellipse x:Name="ArduinoState_LED" HorizontalAlignment="Center" Height="15" Margin="5,0,0,0" VerticalAlignment="Center" Width="15" RequestedTheme="Light"  Fill="DarkRed" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0" >
                <TextBlock x:Name="Temperature1_State" Text="體溫計(腋溫)：未連線" Margin="0,5,0,5"/>
                <Ellipse x:Name="Temperature1_State_LED" HorizontalAlignment="Center" Height="15" Margin="5,0,0,0" VerticalAlignment="Center" Width="15" RequestedTheme="Light"  Fill="DarkRed" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0" >
                <TextBlock x:Name="Temperature2_State" Text="體溫計(臉)：未連線" Margin="0,5,0,5"/>
                <Ellipse x:Name="Temperature2_State_LED" HorizontalAlignment="Center" Height="15" Margin="5,0,0,0" VerticalAlignment="Center" Width="15" RequestedTheme="Light"  Fill="DarkRed" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0" >
                <TextBlock x:Name="Temperature3_State" Text="體溫計(室溫)：未連線" Margin="0,5,0,5"/>
                <Ellipse x:Name="Temperature3_State_LED" HorizontalAlignment="Center" Height="15" Margin="5,0,0,0" VerticalAlignment="Center" Width="15" RequestedTheme="Light"  Fill="DarkRed" />
            </StackPanel>
            <Button x:Name="ConnectButton" Content="Connect" Click="{x:Bind ConnectButton_Click1}" Margin="0,10,0,0"/>
            <Button x:Name="ConnectButton1" Content="Connect" Click="{x:Bind ConnectButton_Click2}" Margin="0,10,0,0"/>
            <Button x:Name="ConnectButton2" Content="Connect" Click="{x:Bind ConnectButton_Click3}" Margin="0,10,0,0"/>
            <ComboBox x:Name="ServiceList" Margin="0,10,0,0" PlaceholderText="Choose a service" Visibility="Collapsed"
                      ItemsSource="{x:Bind ServiceCollection}" DisplayMemberPath="Name"
                     />
            <ComboBox x:Name="CharacteristicList" Margin="0,10,0,0" PlaceholderText="Choose a characteristic" Visibility="Collapsed"
                      ItemsSource="{x:Bind CharacteristicCollection}"  DisplayMemberPath="Name"
                       />
            <StackPanel Orientation="Horizontal">
                <Button x:Name="CharacteristicReadButton" Content="Read Value" Click="{x:Bind CharacteristicReadButton_Click}"
                        Visibility="Collapsed" Margin="0,10,10,0"/>
            </StackPanel>
            <TextBlock x:Name="CharacteristicLatestValue" Margin="0,10,0,0"/>
            <TextBlock x:Name="CharacteristicLatestValue1" Margin="0,10,0,0"/>
            <TextBlock x:Name="CharacteristicLatestValue2" Margin="0,10,0,0"/>
            <ScrollViewer ZoomMode="Enabled" MaxZoomFactor="10"
              HorizontalScrollMode="Enabled" HorizontalScrollBarVisibility="Visible"
              Height="200" Width="200" HorizontalAlignment="Left">
                <StackPanel>
                    <TextBlock x:Name="Read_Watch" Margin="0,10,0,0" Text=""/>
                    <!-- more page content -->
                </StackPanel>
            </ScrollViewer>

            <TextBox x:Name="WriteInputValue" Text="0" 
                                 Height="30" 
                                 MinWidth="238"
                                 MaxWidth="238"
                                 TextWrapping="Wrap"
                                 Margin="10,30,0,0"
                                 VerticalAlignment="Bottom" HorizontalAlignment="Left"
                                 />
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="心率："
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       FontWeight="Bold"
                       FontSize="25"
                       Foreground="Gray" Margin="10,0,0,0" />
                <ProgressBar x:Name="HR_ProgressBar" Value="70" Maximum="130" Width="230" Minimum="0" Height="30" HorizontalAlignment="Left"   >
                </ProgressBar>
                <TextBlock x:Name="HR"
                           Text="70"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           FontWeight="Bold"
                           FontSize="25"
                           Foreground="Gray" Margin="10,0,0,0" />
                <TextBlock Text="bpm"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           FontWeight="Bold"
                           FontSize="25"
                           Foreground="Gray" Margin="10,0,0,0" />
                <TextBlock Text="X-Axis："
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       FontWeight="Bold"
                       FontSize="25"
                       Foreground="Gray" Margin="80,0,0,0" />
                <TextBlock x:Name="X"
                           Text="0000"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           FontWeight="Bold"
                           FontSize="25"
                           Foreground="Gray" Margin="10,0,0,0" />
                <TextBlock Text="Y-Axis："
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       FontWeight="Bold"
                       FontSize="25"
                       Foreground="Gray" Margin="80,0,0,0" />
                <TextBlock x:Name="Y"
                           Text="0000"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           FontWeight="Bold"
                           FontSize="25"
                           Foreground="Gray" Margin="10,0,0,0" />
                <TextBlock Text="Z-Axis："
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       FontWeight="Bold"
                       FontSize="25"
                       Foreground="Gray" Margin="80,0,0,0" />
                <TextBlock x:Name="Z"
                           Text="0000"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           FontWeight="Bold"
                           FontSize="25"
                           Foreground="Gray" Margin="10,0,0,0" />
            </StackPanel>
            <Button x:Name="Send" Content="Send" Click="{x:Bind SendButton_Click}" Margin="0,10,0,0"/>
            <TextBlock x:Name="txtPortData" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,0">No data yet</TextBlock>
            <TextBlock x:Name="txtStatus" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,0">No data yet</TextBlock>
            <StackPanel Orientation="Horizontal" Margin="0,0" >
                <TextBlock Text="X："
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       FontWeight="Bold"
                       FontSize="25"
                       Foreground="Gray" Margin="80,0,0,0" />
                <TextBlock x:Name="X1"
                           Text="70"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           FontWeight="Bold"
                           FontSize="25"
                           Foreground="Gray" Margin="10,0,0,0" />
                <TextBlock Text="Y："
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       FontWeight="Bold"
                       FontSize="25"
                       Foreground="Gray" Margin="80,0,0,0" />
                <TextBlock x:Name="Y1"
                           Text="70"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           FontWeight="Bold"
                           FontSize="25"
                           Foreground="Gray" Margin="10,0,0,0" />
                <TextBlock Text="Z："
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       FontWeight="Bold"
                       FontSize="25"
                       Foreground="Gray" Margin="80,0,0,0" />
                <TextBlock x:Name="Z1"
                           Text="70"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           FontWeight="Bold"
                           FontSize="25"
                           Foreground="Gray" Margin="10,0,0,0" />

            </StackPanel>

        </StackPanel>

    </ScrollViewer>

</Page>